{
  "name": "custom-flex-extensions-serverless",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "test": "echo 'Tests to come'; exit 1",
    "old:start": "twilio serverless:start",
    "start": "twilio-run --functions-folder dist/functions --assets-folder dist/assets",
    "deploy": "twilio serverless:deploy --override-existing-project --runtime node16",
    "deploy-env": "npm run deploy -- --env \".env.$TWILIO_PROFILE\"",
    "install-serverless-plugin": "twilio plugins:install @twilio-labs/plugin-serverless@v2",
    "deploy:dev": "TWILIO_PROFILE=dev npm run deploy-env",
    "deploy:test": "TWILIO_PROFILE=test npm run deploy-env",
    "deploy:qa": "TWILIO_PROFILE=qa npm run deploy-env",
    "deploy:prod": "TWILIO_PROFILE=prod npm run deploy-env",
    "lint": "eslint .",
    "lint:fix": "npm run lint -- --fix",
    "lint:report": "npm run lint -- --output-file eslint_report.json --format json",
    "build": "tsc && npm run build:copy-assets && npm run build:copy-js-functions",
    "build:copy-assets": "copyfiles src/assets/*.json src/assets/**/*.json --up 2 --exclude **/*.ts dist/assets/",
    "build:copy-js-functions": "copyfiles src/functions/*.js src/functions/**/*.js --up 2 --exclude **/*.ts dist/functions/",
    "prestart": "npm run build",
    "predeploy": "npm run build"
  },
  "dependencies": {
    "@twilio-labs/serverless-runtime-types": "^2.2.3",
    "@twilio/runtime-handler": "1.3.0",
    "@types/node": "^20.3.3",
    "axios": "^1.4.0",
    "lodash": "^4.17.21",
    "node-fetch": "2.6.7",
    "randomstring": "^1.2.2",
    "twilio": "^4.11.0",
    "twilio-flex-token-validator": "^1.5.6"
  },
  "devDependencies": {
    "@types/node-fetch": "^2.6.4",
    "copyfiles": "^2.2.0",
    "eslint": "^8.37.0",
    "eslint-config-twilio": "^2.0.0",
    "twilio-run": "^3.5.3",
    "typescript": "^5"
  },
  "engines": {
    "node": "16"
  }
}
